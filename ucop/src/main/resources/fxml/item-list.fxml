<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ucop.controller.ItemController"
      spacing="10" prefWidth="800" prefHeight="600">
    <Label text="Sản phẩm/Dịch vụ" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <TableView fx:id="tblItems" prefHeight="500">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colSku" text="SKU" prefWidth="120"/>
            <TableColumn fx:id="colName" text="Tên" prefWidth="260"/>
            <TableColumn fx:id="colPrice" text="Giá" prefWidth="120"/>
        </columns>
    </TableView>
</VBox>
