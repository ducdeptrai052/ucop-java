<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ucop.controller.CategoryController"
      spacing="10" prefWidth="800" prefHeight="600">
    <Label text="Danh mục" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Label text="Tên danh mục:"/>
        <TextField fx:id="txtName" prefWidth="300"/>
        <Button fx:id="btnSave" text="Lưu" onAction="#handleSave"/>
        <Button fx:id="btnDelete" text="Xóa" onAction="#handleDelete"/>
        <Button text="Mới" onAction="#handleNew"/>
        <Pane HBox.hgrow="ALWAYS"/>
    </HBox>

    <TableView fx:id="tblCategories" prefHeight="500">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
            <TableColumn fx:id="colName" text="Tên danh mục" prefWidth="300"/>
        </columns>
    </TableView>
</VBox>
