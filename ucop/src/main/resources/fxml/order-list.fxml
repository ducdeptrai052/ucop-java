<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ucop.controller.OrderManagementController"
      spacing="10" prefWidth="800" prefHeight="600">
    <HBox spacing="10">
        <Label text="Đơn hàng" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Label text="Lọc trạng thái:"/>
        <ComboBox fx:id="cbStatusFilter"/>
    </HBox>
    <TableView fx:id="tblOrders" prefHeight="500">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colCustomer" text="Khách" prefWidth="200"/>
            <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="140"/>
            <TableColumn fx:id="colGrandTotal" text="Tổng tiền" prefWidth="140"/>
        </columns>
    </TableView>
</VBox>
