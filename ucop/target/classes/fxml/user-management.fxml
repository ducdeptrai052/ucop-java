<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ucop.controller.UserManagementController"
      spacing="10" prefWidth="1000" prefHeight="720">
    <Label text="Quản lý người dùng" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="8">
        <columnConstraints>
            <ColumnConstraints minWidth="100"/>
            <ColumnConstraints minWidth="220"/>
            <ColumnConstraints minWidth="100"/>
            <ColumnConstraints minWidth="220"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="30"/>
            <RowConstraints minHeight="30"/>
            <RowConstraints minHeight="30"/>
            <RowConstraints minHeight="30"/>
            <RowConstraints minHeight="30"/>
        </rowConstraints>

        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtUsername" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEmail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Mật khẩu mới:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="txtPassword" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Role:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <ComboBox fx:id="cbRole" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <CheckBox fx:id="chkLocked" text="Khóa tài khoản" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

        <Label text="Họ tên:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtFullName" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Label text="Điện thoại:" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
        <TextField fx:id="txtPhone" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

        <Label text="Địa chỉ:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtAddress" GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.columnSpan="3"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Mới" onAction="#handleNew"/>
        <Button text="Lưu/Sửa" onAction="#handleSave"/>
        <Button text="Xóa" onAction="#handleDelete"/>
        <Button text="Đổi mật khẩu" onAction="#handleChangePassword"/>
        <Button text="Gán role" onAction="#handleAssignRole"/>
    </HBox>

    <TableView fx:id="tblUsers" prefHeight="500">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colUsername" text="Username" prefWidth="160"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="220"/>
            <TableColumn fx:id="colLocked" text="Locked" prefWidth="80"/>
            <TableColumn fx:id="colRoles" text="Roles" prefWidth="220"/>
        </columns>
    </TableView>
</VBox>
