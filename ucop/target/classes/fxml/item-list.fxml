<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ucop.controller.ItemController"
            fitToWidth="true" prefWidth="1000" prefHeight="720">
    <content>
        <VBox fx:id="root"
              spacing="12" prefWidth="1000" prefHeight="720">

            <Label text="Quản lý sản phẩm" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <HBox spacing="12" alignment="CENTER_LEFT">
                <VBox spacing="8">
                    <Label fx:id="lblSkuTitle" text="Mã sản phẩm" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <ImageView fx:id="imgPreview" fitWidth="200" fitHeight="200" preserveRatio="true"
                               style="-fx-border-color: #ddd; -fx-border-radius: 4;"/>
                    <Button text="Tải ảnh" onAction="#handleBrowseImage" prefWidth="200"/>
                    <Button text="Xóa ảnh" onAction="#handleClearImage" prefWidth="200"/>
                    <TextField fx:id="txtImageUrl" promptText="Link ảnh (tùy chọn)" prefWidth="200"/>
                </VBox>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120"/>
                        <ColumnConstraints minWidth="240"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="30"/>
                        <RowConstraints minHeight="30"/>
                        <RowConstraints minHeight="30"/>
                        <RowConstraints minHeight="30"/>
                        <RowConstraints minHeight="30"/>
                        <RowConstraints minHeight="30"/>
                    </rowConstraints>

                    <Label text="SKU:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtSku" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Tên sản phẩm:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Mô tả ngắn:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtDescription" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Danh mục:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cbCategory" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="240"/>

                    <Label text="Giá nhập/bán:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtPrice" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <CheckBox fx:id="chkActive" text="Đang bán" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                </GridPane>
            </HBox>

            <HBox spacing="10">
                <Button text="Mới" onAction="#handleNew"/>
                <Button text="Lưu" onAction="#handleSave"/>
                <Button text="Xóa" onAction="#handleDelete"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Export CSV" onAction="#handleExportCsv"/>
                <Button text="Import CSV" onAction="#handleImportCsv"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Lọc danh mục:"/>
                <ComboBox fx:id="cbCategoryFilter" prefWidth="200"/>
                <Button text="Xóa lọc" onAction="#handleClearFilter"/>
            </HBox>

            <TableView fx:id="tblItems" prefHeight="360">
                <columns>
                    <TableColumn fx:id="colSku" text="SKU" prefWidth="120"/>
                    <TableColumn fx:id="colName" text="Tên" prefWidth="260"/>
                    <TableColumn fx:id="colPrice" text="Giá" prefWidth="120"/>
                    <TableColumn fx:id="colActive" text="Kích hoạt" prefWidth="100"/>
                </columns>
            </TableView>

            <padding>
                <Insets top="8" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </content>
</ScrollPane>
