<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ucop.controller.PromotionController"
      spacing="10" prefWidth="800" prefHeight="600">
    <Label text="Khuyến mãi" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <TableView fx:id="tblPromotions" prefHeight="500">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colCode" text="Mã" prefWidth="140"/>
            <TableColumn fx:id="colDescription" text="Mô tả" prefWidth="260"/>
        </columns>
    </TableView>
</VBox>
